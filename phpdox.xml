<phpdox xmlns="http://phpdox.de/config">
 <project name="Coding-Standards-Test" workdir="build/documentation/phpdox" 
          basedir="/var/lib/jenkins/workspace/Coding-Standards-Test">
  <property name="source" value="${basedir}"/>
  <collector publiconly="false">
   <include mask="*.php" />
  </collector>

  <generator output="build">
   <build engine="html" enabled="true" output="documentation"/>
  </generator>
 </project>
</phpdox>